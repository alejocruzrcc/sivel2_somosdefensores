<%- if current_usuario.nil?  %>
  <li><a href="usuarios/sign_in">Iniciar Sesión</a>
<%- else  %>
  <article>
  <!--script>
    $(document).ready(function() {
      window.sivel2_enviarFichaCasoCada60()  ;
    });
  </script-->
  <%= simple_form_for @caso, 
    url: sivel2_gen.casos_path(@caso).sub(/\./,"/"), 
    html: { class: 'form-horizontal' } do |f| 
  %>
    <div data-role="content" class="form-inputs">

      <%= render partial: 'sip/hogar/errores', locals: { f: f } %>
      
      <%= render partial: 'sivel2_gen/casos/datos_interjs', locals: { f: f } %>

      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="nav-item"><a href="#basicos" 
            class="fichacambia nav-link active" aria-selected="true" aria-controls="basicos" role="tab" 
            data-toggle="tab">Datos Básicos</a></li>
          <li role="presentation" class="nav-item"><a href="#victimascolectivas" 
            class="fichacambia nav-link" aria-controls="victimascolectivas" role="tab" 
            data-toggle="tab">Colectivo Humano</a></li>
          <li role="presentation" class="nav-item"><a href="#victimas" class="fichacambia nav-link" 
            aria-controls="victimas" role="tab" 
            data-toggle="tab">Víctimas Individuales</a></li>
          <li role="presentation" class="nav-item"><a href="#ubicaciones" class="fichacambia nav-link" 
            aria-controls="ubicaciones" role="tab" 
            data-toggle="tab">Localización</a></li>
          <li role="presentation" class="nav-item"><a href="#contextos" class="fichacambia nav-link" 
            aria-controls="contextos" role="tab" 
            data-toggle="tab">Contexto</a></li>
          <li role="presentation" class="nav-item"><a href="#presponsables" class="fichacambia nav-link" 
            aria-controls="presponsables" role="tab" 
            data-toggle="tab">Presuntos Responsables</a></li>
          <li role="presentation" class="nav-item"><a href="#actos" class="fichacambia nav-link" 
            aria-controls="actos" role="tab" data-toggle="tab">Actos</a></li>
          <li role="presentation" class="nav-item"><a href="#anexos" class="fichacambia nav-link" 
            aria-controls="anexos" role="tab" data-toggle="tab">Anexos</a></li>
          <li role="presentation" class="nav-item"><a href="#fuentesprensa" class="fichacambia nav-link" 
            aria-controls="fuentesprensa" role="tab" 
            data-toggle="tab">Fuentes Frecuentes</a></li>
          <li role="presentation" class="nav-item"><a href="#fotras" class="fichacambia nav-link" 
            aria-controls="fotras" role="tab" 
            data-toggle="tab">Otras Fuentes</a></li>
          <li role="presentation" class="nav-item"><a href="#descripcion" class="fichacambia nav-link" 
            aria-controls="descripcion" role="tab" 
            data-toggle="tab">Memo</a></li>
          <li role="presentation" class="nav-item"><a href="#etiquetas" class="fichacambia nav-link" 
            aria-controls="etiquetas" role="tab" data-toggle="tab">
              Etiquetas
          </a></li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane fade active show" id="basicos">
            <%= render 'basicos', f: f %>
          </div> 

          <div role="tabpanel" class="tab-pane fade" id="ubicaciones">
            <%= render 'ubicaciones', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="fuentesprensa">
            <%= render 'fuentesprensa', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="fotras">
            <%= render 'fotras', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="contextos">
            <%= render 'contextos', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="presponsables">
            <%= render 'presponsables', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="victimas">
            <%= render 'victimas', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="victimascolectivas">
            <%= render 'victimascolectivas', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="combatientes">
            <%= render 'combatientes', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="actos">
            <%= render 'actos', f: f %> 
          </div>

          <div role="tabpanel" class="tab-pane fade" id="descripcion">
            <%= render 'memo', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="anexos">
            <%= render 'sivel2_gen/casos/anexos', f: f %>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="etiquetas">
            <%= render 'etiquetas', f: f %>
          </div>

        </div> <!-- tab-content -->
      </div> <!-- tabpanel -->
    </div> <!-- form-inputs -->

    <div class="form-actions" style="text-align: center">
      <%= f.button :submit, 'Validar y Guardar', {
        class: 'btn-primary',
        onclick: 'window.sivel2_detenerEnviarCada60()'
      } %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
        sivel2_gen.casos_path, class: 'btn' 
      %>
    </div> <!-- form-action -->
  <% end %> <!-- simple_form_for @caso -->
  </article>
<% end -%> <!-- else -->

