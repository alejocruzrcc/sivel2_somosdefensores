<div class='campos_grupoper'>
  <%= f.input :id, as: :hidden %>
  <% ph = 'N' %>
  <% ac = {'data-autocompleta' => 'no' } %>
  <% if (!f.object.nombre || f.object.nombre == 'N' || 
         f.object.nombre == '') %>
    <% ph = 'Buscar' %>
    <% ac = { } %>
  <% end %>
  <%= f.input :nombre, placeholder: ph,
    value_method: lambda {|t| '' if t.nombre == 'N'},
    :input_html => ac %>
  <%= fvictimacolectiva.input :personasaprox %>
  <!--%= f.input :anotaciones %-->

  <%= fvictimacolectiva.simple_fields_for :actorsocial, 
    html: { :class => 'form-horizontal' } do |a| %>
    <%= a.input :id, as: :hidden %>
    <%= a.input :grupoper_id, as: :hidden %>
    <%= a.input :fechafundacion,
      input_html: {'data-behaviour' => 'datepicker'},
      as: :string %>
    <%= render partial: 'sivel2_gen/casos/lista_victimas_actorsocial', 
      locals: {a: a} %>
  <% end %>
</div>

