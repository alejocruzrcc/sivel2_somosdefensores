

// Fondo de la barra de navegación
.navbar {
	background-image: linear-gradient(rgb(255, 255, 255), rgb(206, 86, 51));
}

// Letra del titulo en barra de navegación
.navbar-brand { 
	color: rgb(6, 6, 8) !important;
}

// Letra de menús en barra de navegación
.navbar-nav>li>a {
	color: rgb(6, 6, 8) !important;
}


.boolean {
	height: inherit;
}

.nav-tabs > li > a {
	padding: 10px 15px;
	border-radius: 4px 4px 0 0;
	line-height: 1.42857143;
	margin-right: 2px;
	background-color: rgb(189, 215, 75);
	border: 1px solid #eee;
}

.nav-tabs > li.active > a {
	background-color: #eee;
	border: 1px solid #aaa;
	border-bottom-color: transparent;
}
.panel-heading {
	text-align: center;
}

.btn-primary:hover,
.btn-primary:focus,
.btn-primary:active,
.btn-primary.active {
  color: #ffffff;
  background-color: rgb(135, 43, 0);
  border-color: #285e8e;
}
